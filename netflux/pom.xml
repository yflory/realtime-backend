<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.commons</groupId>
    <artifactId>xwiki-commons-pom</artifactId>
    <version>7.1.2</version> <!-- see xwiki.version -->
  </parent>
  <groupId>org.xwiki.contrib</groupId>
  <version>0.2</version>
  <artifactId>xwiki-contrib-netflux</artifactId>
  <name>Realtime Netflux Backend</name>
  <description>Backend support for Realtime Applications using the Netflux API
You probably don't want to install this directly</description>

  <scm>
    <connection>scm:git:git://github.com/yflory/realtime-backend.git</connection>
    <developerConnection>scm:git:git@github.com:yflory/realtime-backend.git</developerConnection>
    <url>https://github.com/yflory/realtime-backend/</url>
    <tag>xwiki-contrib-netflux-0.2</tag>
  </scm>
  <distributionManagement>
    <repository>
      <id>xwiki-staging</id>
      <name>XWiki Staging Repository</name>
      <url>http://nexus.xwiki.org/nexus/service/local/staging/deploy/maven2/</url>
    </repository>
  </distributionManagement>
  <developers>
    <developer>
      <id>yflory</id>
      <name>Yann Flory</name>
    </developer>
    <developer>
      <id>cjdelisle</id>
      <name>Caleb James DeLisle</name>
    </developer>
  </developers>

  <properties>
    <xwiki.version>7.1.2</xwiki.version> <!-- see parent version -->
  </properties>

  <dependencies>

    <dependency>
      <groupId>org.xwiki.contrib</groupId>
      <artifactId>xwiki-contrib-websocket</artifactId>
      <version>1.7</version>
    </dependency>

    <dependency>
      <groupId>javax.inject</groupId>
      <artifactId>javax.inject</artifactId>
      <version>1</version>
    </dependency>

    <dependency>
      <groupId>org.xwiki.commons</groupId>
      <artifactId>xwiki-commons-component-api</artifactId>
      <version>${xwiki.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-model</artifactId>
      <version>${xwiki.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.fasterxml.jackson.core</groupId>
      <artifactId>jackson-databind</artifactId>
      <version>2.3.3</version>
    </dependency>
    <dependency>
      <groupId>commons-codec</groupId>
      <artifactId>commons-codec</artifactId>
      <version>1.9</version>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-security-api</artifactId>
      <version>${xwiki.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-bridge</artifactId>
      <version>${xwiki.version}</version>
      <scope>provided</scope>
    </dependency>

  </dependencies>

</project>
